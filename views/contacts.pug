extends layout

block content 
  .pt-4
  .container
    div.text-center
      h1= title
      .pt-2
      a.btn.btn-primary(href='/contacts/add') Add a new contact
    hr
    if contacts.length > 0
      div#contacts-wrapper
        ul.contacts-list.list-group
          each val in contacts
            li.list-group-item(data-contactid=val.id)
              p= `${val.firstName} ${val.lastName}`
              if val.email !== 'undefined'
                p= val.email
              a.fst-italic(href=`/contacts/${val.id}`) View Details >
              .pt-4
    .pt-4
    .pt-4
    a.btn.btn-secondary.btn-sm(href=`/`) <
  .pt-4


  div.fixed-bottom.bg-white
    hr.mt-0
    footer.small.fst-italic.text-center
      p Copyright 2024. Angela Petrone.

