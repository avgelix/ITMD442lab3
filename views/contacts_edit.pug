extends layout

block content
  .pt-4
  .container
  .text-center
    h1= title
    p use the form below to edit the selected contact.
    hr
    form(method='POST', action=`/contacts/${contact.id}/edit`)
      label.fw-bold First Name: 
        |
        input(type='text' name='contactFirstName' value=contact.firstName)
      .pt-4
      label.fw-bold Last Name: 
        | 
        input(type='text' name='contactLastName' value=contact.lastName)
      .pt-4
      label.fw-bold Email: 
        | 
        input(type='text' name='contactEmail' value=contact.email)
      .pt-4
      label.fw-bold Notes: 
        | 
        textarea(name="contactNotes", cols="30", rows="10", value= contact.notes) 
      .pt-4
      .pt-4
      | 
      button.btn.btn-primary(type='submit') Save Changes
      | 
      a.btn.btn-secondary.btn-sm(href='/contacts') Cancel 
    if msg
      p(class='redText')= msg
  .pt-4
  div.fixed-bottom.bg-white
    hr.mt-0
    footer.small.fst-italic.text-center
      p Copyright 2024. Angela Petrone.